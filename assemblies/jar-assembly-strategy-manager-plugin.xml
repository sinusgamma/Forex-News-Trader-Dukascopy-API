	<id>full</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<!-- copy compiled class files -->
		<fileSet>
			<directory>${project.build.outputDirectory}/jforex/plugin/strategies</directory>
			<outputDirectory>jforex/plugin/strategies</outputDirectory>
		</fileSet>
		<!-- optional: copy java source files -->
